# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Rotas de Produtos API
GET     /produtos           controllers.ProdutoController.list(request: Request)
GET     /produtos/:id       controllers.ProdutoController.getById(id: Long)
POST    /produtos           controllers.ProdutoController.create(request: Request)
PUT     /produtos/:id       controllers.ProdutoController.update(id: Long, request: Request)
DELETE  /produtos/:id       controllers.ProdutoController.delete(id: Long)

# Rotas de Categorias API

GET     /categorias              controllers.CategoriaController.listarCategorias(request: Request)
GET     /categorias/:id          controllers.CategoriaController.buscarCategoria(id: Long)
POST    /categorias              controllers.CategoriaController.criarCategoria(request: Request)
PUT     /categorias/:id          controllers.CategoriaController.atualizarCategoria(id: Long, request: Request)
DELETE  /categorias/:id          controllers.CategoriaController.deletarCategoria(id: Long)

# Rotas de Produtos API
GET     /usuarios           controllers.UsuarioController.list(request: Request)
GET     /usuarios/:id       controllers.UsuarioController.getById(id: Long)
POST    /usuarios           controllers.UsuarioController.create(request: Request)
PUT     /usuarios/:id       controllers.UsuarioController.update(id: Long, request: Request)
DELETE  /usuarios/:id       controllers.UsuarioController.delete(id: Long, request: Request)

# Rotas de autenticação
POST    /login           controllers.AuthController.login(request: Request)