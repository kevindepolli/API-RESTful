# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Rotas de Produtos API
GET     /produtos           controllers.ProdutoController.list(request: Request)
GET     /produtos/:id       controllers.ProdutoController.getById(id: Long)
POST    /produtos           controllers.ProdutoController.create(request: Request)
PUT     /produtos/:id       controllers.ProdutoController.update(id: Long, request: Request)
DELETE  /produtos/:id       controllers.ProdutoController.delete(id: Long)